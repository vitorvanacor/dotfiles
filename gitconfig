[alias]
    st = status -sb
    squash = "!bash -c 'git rebase --interactive HEAD~$1' --"
    br = "!sh -c 'git checkout -b $1 2>/dev/null || git checkout $1' --"
    current = rev-parse --abbrev-ref HEAD
    amend = !git add -A && git commit --amend --no-edit
    unstage = reset HEAD
    uncommit = "!bash -c 'git reset --soft HEAD~$1' --"
    unpublish = "!git push origin --delete $(git current)"
    save = !git-save.sh
    sync = !git-sync.sh
    backup = !git-backup.sh
    # Mark a file as "assume unchanged", which means that Git will treat it
    # as though there are no changes to it even if there are. Useful for
    # temporary changes to tracked files
    assume = update-index --assume-unchanged
    # Reverse the above
    unassume = update-index --no-assume-unchanged
    # Show the files that are currently assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"

[branch "master"]
  mergeoptions = --ff-only

[pull]
    ff = only

[push]
    default = current

[rebase]
    autoSquash = true
    autoStash = true
    stat = true

[url "https://github.com/"]
    insteadOf = gh/

[user]
    name = Vitor Vanacor
    email = vitorvanacor@gmail.com

[color]
    ui = auto

# Load local config
[include]
    path = ~/.gitconfig.local